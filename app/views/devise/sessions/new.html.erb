<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "well span3", :style => "position:absolute; left:35%;"}) do |f| %>
	<h3>Sign in</h3><br />
  <div>
  <%= f.email_field :email, :placeholder => "Email" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me , :style => "float:left"%> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn-primary" %></div>
  <%= render "links" %>
<% end %>

