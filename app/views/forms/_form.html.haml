= form_for @form do |f|
  -if @form.errors.any?
    #error_explanation
      %h2= "#{pluralize(@form.errors.count, "error")} prohibited this form from being saved:"
      %ul
        - @form.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id, :value => current_user, :placeholder => current_user.email, :disabled => "disabled"
  .field
    = f.label :string
    = f.text_field :string
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
